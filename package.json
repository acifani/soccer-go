{
  "name": "soccer-go",
  "version": "0.5.3",
  "description": "Soccer CLI for stats and results.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/acifani/soccer-go"
  },
  "author": {
    "name": "Alessandro Cifani",
    "email": "alessandro.cifani@gmail.com",
    "url": "https://github.com/acifani"
  },
  "keywords": [
    "soccer",
    "cli",
    "sports",
    "typescript"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "soccer-go": "lib/index.js",
    "sgo": "lib/index.js"
  },
  "scripts": {
    "clean": "rimraf lib && rimraf coverage",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma es5",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.js ./src",
    "prepublishOnly": "npm run format && npm run build",
    "prebuild": "npm run clean",
    "build": "tsc --pretty",
    "pretest": "npm run lint",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "jest --watch",
    "start": "ts-node --files src/index.ts",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "cli-table3": "^0.5.1",
    "commander": "^3.0.2",
    "figlet": "^1.2.1",
    "inquirer": "^7.0.0",
    "inquirer-autocomplete-prompt": "^1.0.1",
    "moment": "^2.24.0",
    "ora": "^6.1.2",
    "picocolors": "^1.0.0",
    "update-notifier": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@tsconfig/recommended": "^1.0.1",
    "@types/figlet": "^1.2.0",
    "@types/inquirer": "^6.0.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/update-notifier": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "auto-changelog": "^2.0.0",
    "coveralls": "^3.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "transform": {
      ".(ts)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node"
  }
}
